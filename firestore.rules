rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: deny all access unless explicitly overridden
    match /{document=**} {
      allow read, write: if false;
    }

    // New rule: Allow anyone to read documents in the 'products' collection
    match /products/{productId} {
      allow read: if true; // Allows anyone to read products
    }

    // Your existing rule for user favorites
    match /users/{userId}/favorites/{favoriteId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Your existing rule for user favorites
    match /users/{userId}/favorites/{favoriteId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/cart/{cartItemId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /stripe_customers/{uid} {
      allow read, write: if request.auth.uid == uid;

      match /payment_methods/{id} {
        allow read,write: if request.auth.uid == uid;
      }
      match /payments/{id} {
        allow read, write: if request.auth.uid == uid;
      }
    }
  }
}
